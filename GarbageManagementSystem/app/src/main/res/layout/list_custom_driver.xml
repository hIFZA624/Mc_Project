<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp"
        style="@style/ThemeOverlay.AppCompat.Dark"></TextView>

    <TextView
        android:id="@+id/dId"
        android:layout_width="match_parent"
        android:layout_height="30sp"

        android:background="@color/purple_200"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp"
        style="@style/ThemeOverlay.AppCompat.Dark"></TextView>



    <TextView
        android:id="@+id/dname"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Name"
        android:background="@color/purple_200"

        ></TextView>


    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>

    <TextView
        android:id="@+id/dpwd"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Password"
        android:background="@color/purple_200"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>
    <TextView
        android:id="@+id/dmobile"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Mobile Number"
        android:background="@color/purple_200"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:textColor="@color/design_default_color_secondary_variant"

        android:textSize="30sp"
        ></TextView>
    <TextView
        android:id="@+id/dadress"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Adress"
        android:background="@color/purple_200"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>
    <TextView
        android:id="@+id/dArea"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Area"
        android:background="@color/purple_200"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>

    <TextView
        android:id="@+id/dCnic"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter CNIC Number"
        android:background="@color/purple_200"
        ></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update">

    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete">

    </Button>
</LinearLayout>