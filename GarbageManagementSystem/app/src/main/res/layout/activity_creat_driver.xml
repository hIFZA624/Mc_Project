<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatDriver"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form To Creat Driver"
        android:textColor="@color/purple_500"
        android:textSize="40sp"
        android:background="@color/cardview_shadow_end_color"
        android:textStyle="italic"
        android:textAlignment="center"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp"
        style="@style/ThemeOverlay.AppCompat.Dark"></TextView>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Name"
        ></EditText>


    <TextView
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Password"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Mobile Number"        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adress"
        android:textColor="@color/design_default_color_secondary_variant"

        android:textSize="30sp"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Adress"     ></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter Area"     ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC"
        android:textSize="30sp"
        android:textColor="@color/design_default_color_secondary_variant"

        ></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="Enter CNIC Number"></EditText>


</LinearLayout>