<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".updateDriver">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navmenuadddriver"
        android:layout_gravity="start"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbaradddriver"
        app:title="Admin DashBorad"
        app:titleTextColor="@color/black"
        android:background="@color/colornav"/>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbaradddriver"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Driver"
                android:textColor="@color/purple_500"
                android:textSize="40sp"
                android:background="@color/cardview_shadow_end_color"
                android:textStyle="italic"
                android:textAlignment="center"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="30sp"
                style="@style/ThemeOverlay.AppCompat.Dark"></TextView>



            <EditText
                android:id="@+id/updatename"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter Name"
                android:padding="2dp"
                android:background="@color/purple_200"

                ></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="30sp"
                style="@style/ThemeOverlay.AppCompat.Dark"></TextView>



            <EditText
                android:id="@+id/updatemaildriver"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter email"
                android:padding="2dp"
                android:background="@color/purple_200"

                ></EditText>


            <TextView
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="30sp"
                android:textColor="@color/design_default_color_secondary_variant"

                ></TextView>

            <EditText
                android:id="@+id/updatepwd"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter Password"
                android:padding="2dp"
                android:background="@color/purple_200"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="30sp"
                android:textColor="@color/design_default_color_secondary_variant"

                ></TextView>
            <EditText
                android:id="@+id/updatemobile"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter Mobile Number"
                android:padding="2dp"
                android:background="@color/purple_200"
                ></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adress"
                android:textColor="@color/design_default_color_secondary_variant"

                android:textSize="30sp"
                ></TextView>
            <EditText
                android:id="@+id/updateadress"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter Adress"
                android:background="@color/purple_200"
                android:padding="2dp"
                ></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="30sp"
                android:textColor="@color/design_default_color_secondary_variant"

                ></TextView>
            <EditText
                android:id="@+id/updatearea"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter Area"
                android:background="@color/purple_200"
                android:padding="2dp"
                ></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CNIC"
                android:textSize="30sp"
                android:textColor="@color/design_default_color_secondary_variant"

                ></TextView>

            <EditText
                android:id="@+id/updatecnic"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:hint="Enter CNIC Number"
                android:background="@color/purple_200"
                android:padding="2dp"
                ></EditText>

            <Button
                android:id="@+id/creatdriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginBottom="10dp"
                android:onClick="UpdateDriver" />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>