<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailUser">
    <EditText
        android:id="@+id/email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/Last1"
        android:text="Name"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="179dp" />

    <EditText
        android:id="@+id/Last1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first1"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="272dp" />

    <EditText
        android:id="@+id/first1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/user"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="372dp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
android:layout_marginTop="100dp"
        android:text="User Details"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email1"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:onClick="updateuser10"
        android:text="Update"
        app:backgroundTint="#CDDC39"
        tools:ignore="UsingOnClickInXml">

    </Button>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email1"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/update"
        android:onClick="deleteUSER"
        android:text="Delete"
        app:backgroundTint="#D33535">

    </Button>
</RelativeLayout>